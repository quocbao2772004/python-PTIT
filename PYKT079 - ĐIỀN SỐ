def main():
    test=int(input())
    for _ in range(test):
        n=int(input())
        a=list(map(int,input().split()))
        b=set(a)
        ma=max(a)
        mi=min(a)
        print(ma-mi-len(b)+1)


if __name__=='__main__':
    main()
